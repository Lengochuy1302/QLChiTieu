<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/background_dialog"
    android:orientation="vertical">

    <TextView
        android:textColor="#3E4467"
        android:layout_marginTop="0dp"
        android:id="@+id/titleThemKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="CHỌN LOẠI THU"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />
    <RelativeLayout
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/background_edttext"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/locLoai"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#ABD2D8"
                android:drawableTint="@color/grey_dam"
                android:textColor="@color/grey_dam"
                android:textColorHint="@color/grey_dam" />

        </RelativeLayout>
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/loc"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:text="Lọc"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_bg"/>
    <Button
        android:id="@+id/huyloc"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Thoát"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_ui"/>

</LinearLayout>


</LinearLayout>