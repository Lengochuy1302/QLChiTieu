<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Capnhatthongtinnguoidung">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
    >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:paddingRight="36dp"
                android:paddingLeft="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:paddingBottom="5dp"
                        android:text="THÔNG TIN"
                        android:textColor="#3E4467"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imgavatar"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/default_user"
                        app:civ_border_color="#3E4467"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Avatar" />
                </LinearLayout>


                <TextView
                    android:id="@+id/hvt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="Họ và tên:" />

                <EditText
                    android:id="@+id/til_hoTen_capNhatActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edttextdox"
                    android:drawableRight="@drawable/ic_baseline_assignment_24"
                    android:drawableTint="#ABD2D8"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/grey_dam"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="5dp"
                    android:text="Email:" />

                <EditText
                    android:id="@+id/til_mail_capNhatActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/background_edttextdox"
                    android:drawableRight="@drawable/ic_baseline_email_24"
                    android:drawableTint="#ABD2D8"
                    android:enabled="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/grey_dam"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/ns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="Ngày sinh:" />

                <TextView
                    android:id="@+id/til_birtday_capNhatActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edttextdox"
                    android:drawableRight="@drawable/ic_date"
                    android:drawableTint="#ABD2D8"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/grey_dam"
                    android:textSize="17dp" />


                <TextView
                    android:id="@+id/sodt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="5dp"
                    android:text="Số điện thoại:" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:hintEnabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/til_phone_capNhatActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/background_edttextdox"
                        android:drawableRight="@drawable/ic_baseline_contact_phone_24"
                        android:drawableTint="#ABD2D8"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:hint="0xxxxxxxxx"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/grey_dam"
                        android:textSize="17dp" />
                </com.google.android.material.textfield.TextInputLayout>



<LinearLayout
    android:id="@+id/linersendotp"
android:visibility="gone"
    android:layout_marginTop="18dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <EditText
        android:id="@+id/nhapotp"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:background="@drawable/background_edttextdox"
        android:drawableRight="@drawable/ic_baseline_verified_user_24"
        android:drawableTint="#ABD2D8"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:hint="Nhập mã OTP..."
        android:paddingBottom="10dp"
        android:textColor="@color/grey_dam"
        android:textSize="17dp" />
    <Button
        android:id="@+id/guilai"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:text=""
        android:textColorHint="#FFFFFF"
        android:enabled="false"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="1dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/backgroundcsc"
        android:layout_height="45dp"/>
</LinearLayout>

                <TextView
                    android:id="@+id/xoataikhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="4dp"

                    android:layout_marginEnd="36dp"
                    android:layout_marginBottom="-26dp"
                    android:text="Xóa tài khoản"
                    android:textColor="#E40505" />
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_marginStart="36dp"
    android:layout_marginTop="49dp"
    android:layout_marginEnd="36dp"
    android:layout_marginBottom="16dp"
    android:layout_height="60dp">

    <Button
        android:id="@+id/btn_ok_capNhatActivity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_bg"
        android:text="TIẾP TỤC"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hoantat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_bg"
        android:text="HOÀN TẤT"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </ScrollView>




    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>