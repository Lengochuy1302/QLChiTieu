<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Datlaimatkhaubanggmail">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/securityapk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUÊN MẬT KHẨU"
        android:textColor="#673AB7"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_editor_absoluteX="0dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/email"
            android:layout_marginTop="15dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/regmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/background_edttextdox"
                android:hint="Nhập email lại mật khẩu..."
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableStart="@drawable/ic_baseline_assignment_24"
                android:drawableTint="#ABD2D8"
                android:textColorHint="@color/grey_dam"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="444dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/regmailbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_bg"
            android:text="Xác Nhận"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="570dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/logofpt"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/logofpoly" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>