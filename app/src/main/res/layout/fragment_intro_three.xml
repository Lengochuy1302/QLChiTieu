<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BlankFragment1"
    android:orientation="vertical"
    android:padding="0dp"
    android:gravity="center">
<pl.droidsonroids.gif.GifImageView
    android:layout_width="match_parent"
    android:layout_marginTop="0dp"
    android:layout_height="350dp"
    android:src="@drawable/chart_line"/>
    <LinearLayout
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THỐNG KÊ VÀ BẢO VỆ TIỀN CHO BẠN"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#00BCD4"
            android:layout_marginTop="0dp"/>
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Miêu tả một cách trực quan những nguồn chi tiêu bằng biểu đồ, từ đó có thể cho thấy được xu hướng tiêu dùng của bạn, đưa ra nhận định từ đó giúp bạn giới hạn chi tiêu của mình một cách hiệu quả hơn"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="110dp"
            android:id="@+id/btnStart"
            android:layout_height="wrap_content"
            android:background="@drawable/vientrondepv"
            android:text="Tiếp tục"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>


</LinearLayout>