    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logovi"
        android:layout_marginTop="30dp"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linearLayoutlogin"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingBottom="5dp">



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                app:startIconDrawable="@drawable/email"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/edtUserName"
                    android:hint="Nhập gmail..."
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:padding="14dp"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/grey_dam"

                    android:background="@drawable/background_edttext"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="20dp"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_key"
                android:id="@+id/matpass"
                app:passwordToggleTint="@color/grey_dam">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="textPassword"
                    android:hint="Nhập mật khẩu..."
                    android:textColorHint="@color/grey_dam"
                    android:padding="14dp"
                    android:background="@drawable/background_edttext"
                    app:passwordToggleEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bgv"
                    android:text="ĐĂNG NHẬP"

                    android:textColor="@color/white" />

                <Button

                    android:id="@+id/btnRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"

                    android:background="@drawable/bg_uiv"
                    android:src="@drawable/ic_add"
                    android:text="ĐĂNG KÝ"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/quenmatkhau"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu?" />


        </LinearLayout>


    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/logofpt"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/logofpoly" />
</LinearLayout>



</RelativeLayout>